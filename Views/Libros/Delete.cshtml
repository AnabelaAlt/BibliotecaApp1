@model BibliotecaApp.Models.Libro

<h1>Eliminar Libro</h1>

<h3>¿Está seguro que desea eliminar este libro?</h3>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Model.Autor
        </dd>
        <dt class="col-sm-2">
            Año de Publicación
        </dt>
        <dd class="col-sm-10">
            @Model.AñoPublicacion
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al Listado</a>
    </form>
</div>

